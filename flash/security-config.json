{
  "security": {
    "version": "2.0.0",
    "lastUpdated": "2025-01-27",
    "features": {
      "ddosProtection": {
        "enabled": true,
        "maxRequestsPerSecond": 10,
        "maxRequestsPerMinute": 100,
        "maxConcurrentRequests": 5,
        "emergencyMode": {
          "enabled": true,
          "activationThreshold": 50,
          "duration": 600000
        }
      },
      "firewallProtection": {
        "enabled": true,
        "ipBlocking": true,
        "geoBlocking": false,
        "behaviorAnalysis": true,
        "fingerprinting": true
      },
      "contentSecurity": {
        "enabled": true,
        "encryption": true,
        "integrityChecking": true,
        "antiTampering": true,
        "copyProtection": true
      },
      "coreProtection": {
        "enabled": true,
        "xssProtection": true,
        "csrfProtection": true,
        "botProtection": true,
        "devToolsProtection": true
      }
    },
    "monitoring": {
      "realTimeAlerts": true,
      "incidentReporting": true,
      "performanceTracking": true,
      "securityLogs": true
    },
    "emergencyContacts": {
      "securityTeam": "security@usdtflash.com",
      "adminPanel": "/admin/security",
      "incidentResponse": "/security/incident"
    },
    "blockedPatterns": [
      "bot", "crawler", "spider", "scraper",
      "hack", "exploit", "injection", "xss",
      "ddos", "flood", "spam", "malware"
    ],
    "trustedDomains": [
      "github.io",
      "githubusercontent.com",
      "cdnjs.cloudflare.com",
      "fonts.googleapis.com"
    ],
    "securityHeaders": {
      "contentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';",
      "xFrameOptions": "DENY",
      "xContentTypeOptions": "nosniff",
      "referrerPolicy": "strict-origin-when-cross-origin",
      "permissionsPolicy": "geolocation=(), microphone=(), camera=()"
    }
  }
}